<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#016b03" Padding="24" CornerRadius="0">
            <Label Text="Survival Basics!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Flashlight" 
               Margin="10, 0"/>
        <Switch OnColor="Black"
                ThumbColor="#016b03"
                Margin="10, 0"
                HorizontalOptions="Start"
                Toggled="OnToggled" />

        <BoxView Color="#016b03"
             Margin="0, 20"
             CornerRadius="320"
             WidthRequest="320"
             HeightRequest="320"
             VerticalOptions="Center"
             HorizontalOptions="Center" />
        
        <Label Text="Battery Life Remaining" 
             Margin="0, 10, 0, 0"
             HorizontalOptions="Center"  />
        <BoxView Color="black"
             CornerRadius="50"
             WidthRequest="320"
             HeightRequest="100"
             VerticalOptions="Center"
             HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
